<%# view de events %>

<%# <h1>Places</h1> %>
<div class="cards-container">
  <div class="row">
    <div class="col-12 col-lg-6">
    <%# div competition %>
      <div class="competition">
        <h1><%= @event.competition %></li></h1>
        <p><%= @event.date %></p>
      </div>
      <%# div teams %>
        <div class="team">
          <% @event.teams.each do |team|%>

          <%=cl_image_tag team.photo.key, class: "picture", crop: :fill %>
          <h3><%=team.name%></h3><h3>VS</h3>
          <%end%>
        </div>
        <%# div places %>
            <div class="place">
              <% @event.places.each do |place|%>
              <%=cl_image_tag place.photo.key, class: "picture", crop: :fill %>
              <br>
              <%=place.name%>
                  <br>
              <%=place.address%>
                  <br>
              <%=place.characteristic%>
                <br>
              <%=place.status%>

              <%= link_to "Voir le bar", place_path(place) %>

              <%end%>
            </div>
    </div>
  </div>
</div>


<%= link_to "Retour au matchs", events_path %>
