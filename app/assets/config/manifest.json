{
    "background_color": "black",
    "description": "La meilleur app pour trouver des bar les soirs de match.",
    "display": "fullscreen",
    "name": "Watchons",
    "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f|
        !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
        <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
        {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
        }<%= "," unless (files.size - 1) == index %>
    <% end %>
    ]
}
